<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addCategory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.AddCategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_list"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/navy"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp">

                <Button
                    android:id="@+id/btnBackCategory"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_rounded_back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/snell_roundhand_bold"
                    android:gravity="center"
                    android:text="Category Event"
                    android:textColor="@color/white"
                    android:textSize="32sp" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:text="Add Category"
            android:textColor="@color/navy"
            android:textSize="16dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category Title"
                    android:textColor="@color/navy"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/et_titleAddCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_navy"
                    android:hint="Enter the category title"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/navy"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Schedule Title"
                    android:textColor="@color/navy"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/et_scheduleAddCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_navy"
                    android:hint="Enter the schedule title"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/navy"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Date"
                    android:textColor="@color/navy"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_navy"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_dateAddCategory"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/transparent_background"
                        android:hint="dd/mm/yyyy"
                        android:inputType="date"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textColor="@color/navy"
                        android:textColorHint="@color/hint"
                        android:textSize="13sp" />

                    <RelativeLayout
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/dp_addCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Note"
                    android:textColor="@color/navy"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_navy"
                    android:orientation="horizontal"
                    android:padding="13dp">

                    <EditText
                        android:id="@+id/et_noteAddCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/transparent_background"
                        android:hint="Write note for the schedule"
                        android:inputType="textLongMessage"
                        android:textColor="@color/navy"
                        android:textColorHint="@color/hint"
                        android:textSize="12dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_saveAddCategory"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_gold"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>