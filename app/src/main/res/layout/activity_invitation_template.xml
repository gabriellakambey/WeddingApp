<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.InvitationTemplateActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_invitationTemplate"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/navy"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp">

            <Button
                android:id="@+id/btn_backInvitationTemplate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_rounded_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/snell_roundhand_bold"
                android:gravity="center"
                android:text="Template"
                android:textColor="@color/white"
                android:textSize="32sp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/tb_invitationTemplate"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_template1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/iv_template1"
                    android:layout_width="160dp"
                    android:layout_height="85dp"
                    android:background="@drawable/template1" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_template2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/iv_template2"
                    android:layout_width="160dp"
                    android:layout_height="85dp"
                    android:background="@drawable/template1" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </GridLayout>

    <Button
        android:id="@+id/btn_completeInvitation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_gold"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Complete Invitation"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp" />


</RelativeLayout>