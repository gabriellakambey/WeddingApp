<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    tools:context=".activity.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_wedding_vaganza"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="text"
            android:hint="Enter Your Name"
            android:textColor="@color/white"
            android:textColorHint="@color/hint"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:background="@drawable/round_champagne"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number (WhatsApp)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="phone"
            android:hint="Enter Your Phone Number"
            android:textColor="@color/white"
            android:textColorHint="@color/hint"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:background="@drawable/round_champagne"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_emailRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:hint="Enter Your Email Address"
            android:textColor="@color/white"
            android:textColorHint="@color/hint"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:background="@drawable/round_champagne"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <com.xwray.passwordview.PasswordView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Password"
            android:textColorHint="@color/hint"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:background="@drawable/round_champagne"
            app:useStrikeThrough="true"
            android:drawableTint="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Minimum 6 characters, consists of letters and numbers"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <com.xwray.passwordview.PasswordView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Password"
            android:textColorHint="@color/hint"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:background="@drawable/round_champagne"
            app:useStrikeThrough="true"
            android:drawableTint="@color/white"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bride's &amp; Groom's Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_brideGroomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="text"
            android:hint="Ex: Alex &amp; Kyle"
            android:textColor="@color/white"
            android:textColorHint="@color/hint"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:background="@drawable/round_champagne"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Wedding Date"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_champagne">

            <EditText
                android:id="@+id/textDateSignUp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:maxLines="1"
                android:inputType="date"
                android:textColor="@color/white"
                android:hint="dd/mm/yyyy"
                android:textColorHint="@color/hint"
                android:padding="12dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/transparent_background"/>

            <RelativeLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/datePickerSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar_light"
                android:layout_gravity="center"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_regis"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:text="Sign Up"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/navy"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_champagne"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Already have an account?"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Sign In"
                android:textStyle="bold"
                android:textColor="@color/champagne"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="By registering, I agree to the Wedding Vaganza's"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Terms and Conditions"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>