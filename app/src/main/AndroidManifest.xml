<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weddingvaganza">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".EasyPerfsLib"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/logo_wedding_vaganza"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeddingVaganza">
        <activity android:name=".view.activity.AddScheduleInCategoryActivity"></activity>
        <activity
            android:name=".view.dialog.PaidListDialog"
            android:exported="true" />
        <activity
            android:name=".view.activity.AddBudgetActivity"
            android:exported="true" />
        <activity android:name=".view.activity.CreateInvitationActivity" />
        <activity android:name=".view.activity.AddGuestActivity" />
        <activity android:name=".view.activity.GuestListActivity" />
        <activity android:name=".view.activity.ScheduleFromCategoryActivity" />
        <activity android:name=".view.activity.VendorActivity" />
        <activity android:name=".view.activity.BudgetActivity" />
        <activity android:name=".view.activity.GuestsActivity" />
        <activity android:name=".view.activity.AddRundownActivity" />
        <activity android:name=".view.activity.AddScheduleActivity" />
        <activity android:name=".view.activity.HomeActivity" />
        <activity android:name=".view.activity.SignUpActivity" />
        <activity android:name=".view.activity.SignInActivity" />
        <activity android:name=".view.activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>